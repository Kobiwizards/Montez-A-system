{
  "name": "montez-a-backend",
  "version": "1.0.0",
  "description": "Backend for Montez A Property Management System",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "npx prisma generate && tsc",
    "start": "node dist/server.js",
    "render-build": "npm ci && npx prisma generate && npm run build",
    "render-start": "npx prisma db push && npx prisma db seed && npm start",  # CHANGED
    "deploy:full": "npm run db:deploy && npm run db:seed && npm run start",
    "db:setup": "npx prisma migrate deploy && npx prisma db push && npx prisma db seed",
    "db:push": "npx prisma db push",
    "db:migrate": "npx prisma migrate dev",
    "db:deploy": "npx prisma migrate deploy",
    "db:seed": "npx prisma db seed",
    "seed": "npm run db:seed",
    "db:reset:full": "npx prisma migrate reset --force && npx prisma generate && npm run db:push && npm run db:seed",
    "db:studio": "npx prisma studio",
    "db:reset": "npx prisma migrate reset --force",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "type-check": "tsc --noEmit",
    "docker:build": "docker build -t montez-a-backend .",
    "docker:run": "docker run -p 3001:3001 montez-a-backend",
    "clean": "rm -rf dist node_modules/.cache",
    "prebuild": "npm run clean",
    "prestart": "npm run build",
    "seed:production": "tsx prisma/seed-production.ts"
  },
  "dependencies": {
    "@prisma/client": "^5.9.1",
    "@types/node": "^20.10.0",
    "@types/uuid": "^10.0.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "date-fns": "^3.0.6",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.7",
    "pdfkit": "^0.14.0",
    "prisma": "^5.9.1",
    "uuid": "^13.0.0",
    "ws": "^8.14.2",
    "zod": "^3.22.4",
    "zod-validation-error": "^5.0.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "2.4",
    "@types/compression": "1.7",
    "@types/cors": "2.8",
    "@types/express": "4.17",
    "@types/helmet": "4.0",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "1.9",
    "@types/multer": "1.4",
    "@types/nodemailer": "^6.4.21",
    "@types/pdfkit": "^0.13.9",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.4.6",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "keywords": [
    "property-management",
    "rental-system",
    "montez-a",
    "apartment-management",
    "kenya",
    "rent-collection"
  ],
  "author": "Montez A Management",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/Montez-A-system.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/Montez-A-system/issues"
  },
  "homepage": "https://github.com/yourusername/Montez-A-system#readme"
}
